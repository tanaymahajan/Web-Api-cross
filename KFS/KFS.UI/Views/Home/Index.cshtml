
@{
    ViewBag.Title = "Index";
    Layout ="~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.5.1.js"></script>
<script src="~/Scripts/Curd Operation/Inters.js"></script>
<div>

    <button type="button" class="btn btn-lg btn-primary" data-toggle="modal" data-target="#staticBackdrop" style="margin-left:800px">
        Add Inter
    </button>

    <!-- Register Modal  -->
    <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Register Intern</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="row">
                        <div class="form-group col-auto">
                            <label for="exampleInputEmail1">First Name</label>
                            <input type="text" class="form-control" id="FirstName" aria-describedby="emailHelp">
                        </div>
                        <div class="form-group col-auto">
                            <label for="exampleInputPassword1">Last Name</label>
                            <input type="text" class="form-control" id="LastName">
                        </div>
                        <div class="form-group col-auto">
                            <label for="exampleInputPassword1">College Name</label>
                            <input type="text" class="form-control" id="college">
                        </div>
                        <div class="form-group col-6">
                            <button type="button" class="btn btn-primary" onclick="AddInter()" data-dismiss="modal">Submit</button>
                        </div>
                        <div class="form-group col-6">
                            <button type="button" class="btn btn-primary" onclick="Reset()">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--Update model-->
    <div class="modal fade" id="updateintern" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Register Intern</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="row">
                        <div class="form-group col-auto">
                            <label for="exampleInputEmail1">First Name</label>
                            <input type="text" class="form-control" id="updateFirstName" aria-describedby="emailHelp">
                        </div>
                        <div class="form-group col-auto">
                            <label for="exampleInputPassword1">Last Name</label>
                            <input type="text" class="form-control" id="updateLastName">
                        </div>
                        <div class="form-group col-auto">
                            <label for="exampleInputPassword1">College Name</label>
                            <input type="text" class="form-control" id="updatecollege">
                        </div>
                        <div class="form-group col-6">
                            <button type="button" class="btn btn-primary" onclick="UpdateInter()" data-dismiss="modal">Update</button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
<table class="table table-hover">
  <thead>
      <tr>
          <th scope="col">Id</th>
          <th scope="col">First</th>
          <th scope="col">Last</th>
          <th scope="col">College</th>
          <th scope="col">Update</th>
          <th scope="col">Delete</th>
          
      </tr>
  </thead>
  <tbody id="interdata">
      
  </tbody>
</table>
